= content_tag_for :li, comment, :class => 'comment' do
  %hr{style: "margin:1px",size: "1"}
    .row-fluid{style: "padding: 0px; background-color: #f0f0f0;"}
      .span1
        %div
          = image_tag comment.user.small_image
      .span11
        %a{style:"color: #B94A48;font-weight: bold"}= comment.user.name
        %span{style:"height: 28px;"}= auto_link(simple_format(comment.body), html: {target: "_blank"}, link: :urls)