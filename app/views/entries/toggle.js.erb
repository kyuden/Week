<% if @entry.watch_id %>
  var watch_count = $('#watch-count').text();
  watch_count =  parseInt(watch_count);
  $("#watch-count").text(watch_count - 1 );
  $("#article_<%= @entry.article_id %> .remove-watch").html('<%= link_to 'ちょっと気になる', entries_path(article_id: @entry.article_id, type: 'Watch'), :remote => true, method: :post, :class => "add-watch" %>')
<% else %>
  var cart_count = $("#cart-count").text();
  cart_count =  parseInt(cart_count);
  $("#cart-count").text(cart_count - 1 );
  $("#article_<%= @entry.article_id %> .remove-cart").html('<%= link_to '参加してみる', entries_path(article_id: @entry.article_id, type: 'Cart'), :remote => true, method: :post, :class => "add-cart" %>')
<% end %>
