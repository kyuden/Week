<% if @article.invited  %>
  $("#article_<%= @article.id %> .switch_invitation").html('<%=  link_to switch_invitation_article_path(@article), :remote => true, method: :post, :data => { :confirm => '参加者の募集をやめていいですか？' }, loading: "loading", :class => "switch_invitation"  do %> <i class= "icon-heart"></i> 募集をやめる <% end %>')
<% else %>
  $("#article_<%= @article.id %> .switch_invitation").html('<%=  link_to switch_invitation_article_path(@article), :remote => true, method: :post, loading: "loading", :class => "switch_invitation"  do %> <i class= "icon-heart"></i> 参加者を募集する <% end %>')
<% end %>