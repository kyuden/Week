%h1 Listing watch
- @watches.entries.each do |entry|
  %hr
  = entry.article.disp_day
  - if entry.article.about_time.present?
    %p= "#{entry.article.about_time}辺りから"
  - else
    %p
  = image_tag entry.article.user.image
  = entry.article.user.name
  = entry.article.title
  - if current_user == entry.article.user
    %p 共通の友達はいません
  - else
    - friends = @graph.get_connections("me", "mutualfriends/#{entry.article.user.uid}?fields=name,picture")
    %p 共通の友達
    - friends.each do |friend|
      = image_tag friend["picture"]["data"]["url"]
      = friend["name"]
  - unless entry.cart_hold?(current_user)
    = button_to '参加してみる', entries_path(article_id: entry.article, type: 'Cart')
  = link_to '気になるをやめる', entry, type: 'Watch', :method => :delete, :data => { :confirm => 'Are you sure?' }
  - if entry.article.publish?
    = link_to 'イベント詳細', article_path(entry.article)
  - if entry.article.user == current_user
    = link_to 'Edit', edit_article_path(entry.article)
  / %td= article.description
  / %td= article.date
  / %td= article.comment_id
  / %td= article.user_id
  / %td= article.entry_id
  / %td= link_to 'Show', article
  / %td= link_to 'Edit', edit_article_path(article)
  / %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }
  - entry.article.comments.each do |comment|
    - if comment.body
      %p= render 'comments/comment', comment: comment
  %p= render 'comments/form', {comment: entry.article.comments.build, type: 'Watch'}
